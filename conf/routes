GET     /phones                             controllers.HomeController.phones
POST    /phones/addPhone                    controllers.HomeController.addPhoneNumber
POST    /phones/:id                         controllers.HomeController.updatePhone(id: Int)
DELETE  /phones/:id                         controllers.HomeController.deletePhone(id: Int)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)